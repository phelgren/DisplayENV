{
  "name": "Display ENV",
  "version": "1.0.0",
  "description": "display the environment associated with the IP",
  "icons": {
	  "16": "icon16.png",
	  "48": "icon48.png",
	  "128":"icon128.png"
  },
  "background": { "scripts": ["background.js"] },
  "permissions": ["webRequest","<all_urls>","tabs","system.network"],
  "options_page": "options.html",
  "browser_action" : {
	  "default_title"	: "DisplayENV",
	  "default_icon"	: {
		  "19": "icon19.png",
		  "38": "icon38.png"
	  }
  },
  "content_scripts" :[{
	  "matches"	: ["<all_urls>"],
	  "js"		: ["hover-box.js"]
  }],
  "manifest_version": 2
}
